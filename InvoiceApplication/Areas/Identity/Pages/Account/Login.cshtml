@page "/identity/login"
@model InvoiceApplication.Areas.Identity.Pages.Account.LoginModel

<div class="row justify-content-center" style="margin: 50px;">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Use a local account to login</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating m-1 ">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating m-1">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating m-1">
                    <button id="login-submit" type="submit" class="btn w-100 btn-lg btn-primary m-1">Log in</button>
                    <a class="btn w-100 btn-lg btn-primary m-1" type="button" href="/identity/Register">Register new user</a>
                    <a type="button" class="w-100 btn btn-lg btn-primary m-1" href="/">Home</a>
                </div>
            </form>
        </section>
    </div>
</div>
