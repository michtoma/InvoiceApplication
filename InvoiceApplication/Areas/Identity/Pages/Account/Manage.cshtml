@page
@model InvoiceApplication.Areas.Identity.Pages.Account.Manage


<div class="row" style="margin:50px">
    <div class="row justify-content-center" style="margin: 50px;">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h2>Update user</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating" style="margin:10px">
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="firstName" aria-required="true" />
                        <label asp-for="Input.FirstName" class="form-label"></label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating" style="margin:10px">
                        <input asp-for="Input.LastName" class="form-control" autocomplete="lastName" aria-required="true" />
                        <label asp-for="Input.LastName" class="form-label"></label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-floating" style="margin:10px">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div style="margin:10px">
                        <button id="login-submit" type="submit" class="w-100 btn-lg btn-primary">Update</button>
                        <a type="button" class="w-100 btn btn-lg btn-secondary my-1" href="/">Cancel</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>